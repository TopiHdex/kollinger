---
export interface Props {
  job: {
    id: string;
    name: string;
    description: string;
    imageUrl?: string;
    requirements: string[];
    tasks: string[];
    offer: string[];
  };
}

const { job } = Astro.props;
---

<style is:global>
  @import './JobDetail.scss';
</style>

<div class="job-details-container">
  <div class="left">
    <h1>{job.name}</h1>
    <p class="intro">{job.description}</p>
    {job.imageUrl && (
      <img src={job.imageUrl} alt={job.name} class="job-image" />
    )}
  </div>

  <div class="right">
    <h2>MEHR INFOS</h2>

    <section>
      <h3>Anforderungen</h3>
      <ul>
        {job.requirements.map(req => <li>- {req}</li>)}
      </ul>
    </section>

    <section>
      <h3>dann erwarten Dich bei uns folgende Aufgaben</h3>
      <ul>
        {job.tasks.map(task => <li>- {task}</li>)}
      </ul>
    </section>

    <section>
      <h3>Wir bieten</h3>
      <ul>
        {job.offer.map(item => <li>- {item}</li>)}
      </ul>
    </section>
  </div>
</div>
